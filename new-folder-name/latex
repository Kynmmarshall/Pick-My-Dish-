% Slide 2
\begin{frame}{Project Abstract}
    \begin{itemize}
        \item Intelligent recipe recommendation application
        \item Solves "What should I eat today?" using:
        \begin{itemize}
            \item Mood-based filtering (7 emotional states)
            \item Ingredient availability
            \item Time constraints
        \end{itemize}
        \item Built with \textbf{Flutter}, \textbf{Node.js}, \textbf{MySQL}
        \item Implements \textbf{Layered + Client-Server + Repository} architecture
        \item \textbf{DevOps pipeline} with Jenkins
        \item 99.8\% uptime, 48.5\% test coverage
    \end{itemize}
\end{frame}

% Slide 3
\begin{frame}{Problem Statement}
    \begin{itemize}
        \item \textbf{Decision fatigue} in daily meal preparation
        \item \textbf{Resource constraints}: Limited ingredients and cooking time
        \item \textbf{Emotional disconnect}: Traditional apps ignore user's emotional state
        \item \textbf{Accessibility issues}: Lack of personalized, intuitive interfaces
    \end{itemize}
\end{frame}

% Slide 4
\begin{frame}{Objectives}
    \begin{table}[h]
        \centering
        \begin{tabular}{p{3cm}|p{7cm}}
            \textbf{Objective} & \textbf{Description} \\ \hline
            Personalization & Mood-aware recipe filtering (7 emotional states) \\
            Accessibility & Intuitive UI/UX for users of all technical backgrounds \\
            Performance & Fast recipe loading time and offline functionality \\
            Scalability & Architecture supporting 1000+ concurrent users \\
            Reliability & 99.8\% uptime with robust error handling \\
        \end{tabular}
    \end{table}
\end{frame}

% Slide 5
\begin{frame}{Key Features}
    \begin{columns}
        \column{0.5\textwidth}
        \begin{itemize}
            \item Mood-Based Filtering (Happy, Sad, Energetic, Comfort, Healthy, Quick, Light)
            \item Real-Time Ingredient Matching
            \item Time-Aware Suggestions
            \item Personal Favorites
        \end{itemize}
        
        \column{0.5\textwidth}
        \begin{itemize}
            \item Recipe Upload System
            \item Offline Functionality
            \item User Profiles
            \item Admin Controls
        \end{itemize}
    \end{columns}
\end{frame}

