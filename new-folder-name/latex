% Slide 14
\begin{frame}{Challenges \& Solutions}
    \begin{table}[h]
        \centering
        \scriptsize
        \begin{tabular}{p{3.5cm}|p{7cm}}
            \textbf{Challenge} & \textbf{Solution} \\ \hline
            VPS Configuration Complexity & 
            Studied Contabo/Nginx documentation, configured UFW firewall, optimized Nginx settings \\ \hline
            
            State Management in Flutter & 
            Implemented Provider pattern, created custom ChangeNotifiers, added state persistence \\ \hline
            
            Database Optimization & 
            Normalized database schema, added composite indexes, implemented connection pooling \\ \hline
            
            CI/CD Pipeline Automation & 
            Studied Jenkins documentation, added debugging outputs, created automated scripts \\
        \end{tabular}
    \end{table}
\end{frame}

