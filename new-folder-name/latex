% Slide 8
\begin{frame}{Agile Methodology \& Scrum}
    \textbf{Extreme Programming (XP) Adopted:}
    \begin{itemize}
        \item Pair Programming via Discord
        \item Test-Driven Development (TDD)
        \item Continuous Integration with Jenkins
        \item Small Releases (weekly deployment cycles)
        \item Collective Code Ownership
    \end{itemize}
    
    \vspace{0.3cm}
    \textbf{4-Week Sprint Structure:}
    \begin{itemize}
        \item Sprint 1: Foundation (UI, navigation)
        \item Sprint 2: Core Logic (filtering, database)
        \item Sprint 3: Features (upload, favorites, profiles)
        \item Sprint 4: Polish (testing, deployment, docs)
    \end{itemize}
\end{frame}

% Slide 9
\begin{frame}{System Architecture}
    \textbf{Hybrid Architecture Approach:}
    \begin{itemize}
        \item Layered Architecture (separation of concerns)
        \item Client-Server (distributed access)
        \item Microservices Elements (independent deployable services)
        \item Repository Pattern (data access abstraction)
    \end{itemize}
    
    \vspace{0.3cm}
    \textbf{Architectural Layers:}
    \begin{enumerate}
        \item Presentation Layer (Flutter UI, Provider)
        \item Application Layer (Node.js, Express, Business Logic)
        \item Data Access Layer (Repository Pattern, MySQL)
        \item Infrastructure Layer (VPS, Nginx, Firewall)
    \end{enumerate}
\end{frame}

% Slide 10
\begin{frame}{Design Patterns Implementation}
    \begin{columns}
        \column{0.5\textwidth}
        \begin{block}{Singleton Pattern}
            \begin{itemize}
                \item Database Service
                \item Single connection instance
                \item Prevents resource conflicts
            \end{itemize}
        \end{block}
        
        \begin{block}{Factory Pattern}
            \begin{itemize}
                \item Model creation
                \item JSON deserialization
                \item Flexible object creation
            \end{itemize}
        \end{block}
        
        \column{0.5\textwidth}
        \begin{block}{Provider Pattern}
            \begin{itemize}
                \item State management
                \item Observer pattern implementation
                \item Reactive UI updates
            \end{itemize}
        \end{block}
        
        \begin{block}{Builder Pattern}
            \begin{itemize}
                \item UI widget creation
                \item Step-by-step construction
                \item Clean, readable code
            \end{itemize}
        \end{block}
    \end{columns}
\end{frame}

% Slide 11
\begin{frame}{DevOps Pipeline}
    \centering
    \textbf{Jenkins CI/CD Pipeline Stages:}
    
    \vspace{0.5cm}
    \begin{enumerate}
        \item \textbf{Checkout}: Pull latest code from GitHub
        \item \textbf{Analyze}: Flutter code analysis and linting
        \item \textbf{Test}: Execute unit and integration tests
        \item \textbf{Build}: Generate APK and AppBundle
        \item \textbf{Deploy}: Transfer to VPS and restart services
    \end{enumerate}
    
    \vspace{0.5cm}
    \begin{itemize}
        \item Automated testing and deployment
        \item Hosted on Contabo VPS with Nginx reverse proxy
        \item SSL/TLS encryption via Let's Encrypt
    \end{itemize}
\end{frame}

% Slide 12
\begin{frame}{Results \& Performance Metrics}
    \begin{columns}
        \column{0.5\textwidth}
        \textbf{API Performance:}
        \begin{itemize}
            \item Avg response time: 85–210ms
            \item Success rate: 99.5–99.9\%
            \item Uptime: 99.8\%
        \end{itemize}
        
        \vspace{0.3cm}
        \textbf{Test Coverage:}
        \begin{itemize}
            \item Overall: 84\%
            \item Database Service: 93\%
            \item Recipe Model: 90\%
            \item Screens: 78\%
        \end{itemize}
        
        \column{0.5\textwidth}
        \textbf{Test Execution:}
        \begin{itemize}
            \item Total tests: 31
            \item Pass rate: 100\%
            \item Unit tests: 15
            \item Integration tests: 8
            \item API tests: 5
            \item Widget tests: 3
        \end{itemize}
    \end{columns}
\end{frame}

